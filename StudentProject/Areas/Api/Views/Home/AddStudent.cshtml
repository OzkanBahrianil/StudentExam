@using StudentProject.Areas.Admin.Models
@model UserSignUpViewModel

@{
    ViewData["Title"] = "AddStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<h4 style="text-align:center;">Öğrenci Ekle</h4>
<br />
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        <strong>Başarılı!</strong>&nbsp;&nbsp;&nbsp; @TempData["Success"]
        <button aria-hidden="true" data-dismiss="alert" class="close" style="background-color:transparent;  border:hidden;" type="button">x</button>
    </div>
    <br />

}


                @using (Html.BeginForm("AddStudent", "Home", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="WriterName">Adınız soyadınız</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="WriterMail">Soyadınız</label>
                            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                            <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="WriterPassword mb-2">Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" , @type = "email"})
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="WriterPassword mb-2">Öğrenci Numarası</label>
                            @Html.TextBoxFor(x => x.Student_number, new { @class = "form-control" })
                            <span asp-validation-for="@Model.Student_number" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="WriterPassword mb-2">Fükültesi</label>
                            @Html.TextBoxFor(x => x.Faculty_Name, new { @class = "form-control" })
                            <span asp-validation-for="@Model.Faculty_Name" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="WriterPassword mb-2">Bölümü</label>
                            @Html.TextBoxFor(x => x.Section_name, new { @class = "form-control" })
                            <span asp-validation-for="@Model.Section_name" class="text-danger"></span>
                        </div>

                    </div>
                    <button type="submit" id="submit" class="btn btn-primary submit mb-4">Kayıt Et</button>
                    <div class=" text-danger" asp-validation-summary="All">
                    </div>
                }
