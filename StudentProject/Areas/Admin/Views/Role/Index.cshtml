@using EntityLayer.Concrate
@model List<AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Başarısız!</strong>&nbsp;&nbsp;&nbsp; @TempData["AlertMessage"]
    </div>
    <br />
}

<body>
    <div class="@*page-wrapper*@">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Roller</h5>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>Sil</th>
                                        <th>Düzenle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {


                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-info">Güncelle</a></td>


                                        </tr>
                                    }
                            </table>
                            <br />

                        </div>
                        <button type="button" class="btn btn-primary my-button" data-toggle="modal" data-target="#myModal2">
                            Rol Ekle
                        </button>
                        <div class="modal" id="myModal2">
                            <div class="modal-dialog">
                                <div class="modal-content">

                                    <div class="modal-header">
                                        <h4 class="modal-title">Rol Ekle</h4>
                                        <button type="button" class="close btn-primary" data-dismiss="modal">&times;</button>
                                    </div>

                                    @using (Html.BeginForm("AddRole", "Role", FormMethod.Post))
                                    {
                                       
                                        <div class="modal-body">


                                            <label for="exampleInputName1">İsim</label> @Html.AntiForgeryToken()
                                            <input type="text" name="Name" id="WriterNewPassword" class="form-control" required="" />
                                            <br />

                                        </div>


                                        <div class="modal-footer">
                                            <input type="submit" id="submit" class="btn btn-primary" value="Ekle">
                                            <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Vazgeç</button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>



</body>

