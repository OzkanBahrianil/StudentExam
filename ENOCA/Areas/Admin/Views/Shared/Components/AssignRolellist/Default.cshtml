
@model List<RoleAssignViewModel>
@using (Html.BeginForm("AssignRole", "Home", FormMethod.Post))
{
<td>
    @for (int i = 0; i < Model.Count; i++)
    {
        <input type="hidden" asp-for="@Model[i].RoleId" />
        <input type="hidden" asp-for="@Model[i].Name" />
        <input type="hidden" asp-for="@Model[i].UserId" />
        <input class="form-check-input" type="checkbox" asp-for="@Model[i].Exists" /> <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name &nbsp; &nbsp;</label>

    }
@Html.AntiForgeryToken()
</td>
<td> <button class="btn btn-outline-primary" type="submit">Değişiklikleri Kaydet</button> </td>
}
